<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="top"
    android:orientation="vertical"
    tools:context=".FieldFragment">

    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal" >

            <ImageButton
                android:id="@+id/button_news1"
                android:layout_width="200dp"
                android:layout_height="250dp"
                android:background="@drawable/news1"/>

            <ImageButton
                android:id="@+id/button_news2"
                android:layout_width="200dp"
                android:layout_height="250dp"
                android:background="@drawable/news2"/>

            <ImageButton
                android:id="@+id/button_news3"
                android:layout_width="200dp"
                android:layout_height="250dp"
                android:background="@drawable/news3"/>

            <ImageButton
                android:id="@+id/button_news4"
                android:layout_width="200dp"
                android:layout_height="250dp"
                android:background="@drawable/news1"/>

            <ImageButton
                android:id="@+id/button_news5"
                android:layout_width="200dp"
                android:layout_height="250dp"
                android:background="@drawable/news2"/>

            <ImageButton
                android:id="@+id/button_news6"
                android:layout_width="200dp"
                android:layout_height="250dp"
                android:background="@drawable/news3"/>
        </LinearLayout>
    </HorizontalScrollView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dp"
            android:orientation="vertical" >

            <ImageButton
                android:id="@+id/button_news11"
                android:layout_width="200dp"
                android:layout_height="250dp"
                android:background="@drawable/news1"/>

            <ImageButton
                android:id="@+id/button_news21"
                android:layout_width="200dp"
                android:layout_height="250dp"
                android:background="@drawable/news2"/>

            <ImageButton
                android:id="@+id/button_news31"
                android:layout_width="200dp"
                android:layout_height="250dp"
                android:background="@drawable/news3"/>

            <ImageButton
                android:id="@+id/button_news41"
                android:layout_width="200dp"
                android:layout_height="250dp"
                android:background="@drawable/news1"/>

            <ImageButton
                android:id="@+id/button_news51"
                android:layout_width="200dp"
                android:layout_height="250dp"
                android:background="@drawable/news2"/>

            <ImageButton
                android:id="@+id/button_news61"
                android:layout_width="200dp"
                android:layout_height="250dp"
                android:background="@drawable/news3"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
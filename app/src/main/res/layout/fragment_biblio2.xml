<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BibliothekAlgemain"
    android:orientation="vertical"
    android:background="#4A858080">


    <!--<fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        tools:ignore="MissingConstraints" />-->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
    <Button
        android:id="@+id/opac_bibliothek"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="20dp"
        tools:ignore="MissingConstraints,SpeakableTextPresentCheck"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="150dp"
        android:background="@color/colorPrimary"
        android:textColor="@color/colorText"
        android:text="OPAC - Online Bibliothek"/>

    <Button
        android:id="@+id/bibliothek_platz_regiestrierung2"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="5dp"
        android:text="Reservierungssystem der Universitätsbibliothek der LMU"
        tools:ignore="MissingConstraints,SpeakableTextPresentCheck"
        tools:layout_editor_absoluteX="1dp"
        android:background="@color/colorPrimary"
        android:textColor="@color/colorText"
        tools:layout_editor_absoluteY="150dp" />

            <TextView
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="25dp"
                android:textStyle="bold"
                android:textColor="@color/colorText"
                android:text="Bücherrückgabe" />

            <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/button_book_mm1"
                        android:scaleType="fitXY"
                        android:src="@drawable/mmi1"
                        android:layout_width="140dp"
                        android:layout_height="200dp"/>
                    <ImageButton
                        android:id="@+id/button_book_2"
                        android:scaleType="fitXY"
                        android:layout_marginLeft="15dp"
                        android:src="@drawable/design1"
                        android:layout_width="140dp"
                        android:layout_height="200dp"/>
                    <ImageButton
                        android:id="@+id/button_book_3"
                        android:scaleType="fitXY"
                        android:layout_marginLeft="15dp"
                        android:src="@drawable/design2"
                        android:layout_width="140dp"
                        android:layout_height="200dp"/>
                    <ImageButton
                        android:scaleType="fitXY"
                        android:layout_marginLeft="15dp"
                        android:src="@drawable/book_sample"
                        android:layout_width="140dp"
                        android:layout_height="200dp"/>


                </LinearLayout>

            </HorizontalScrollView>


            <TextView
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="25dp"
                android:textStyle="bold"
                android:textColor="@color/colorText"
                android:text="Math" />

            <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageButton
                        android:scaleType="fitXY"
                        android:src="@drawable/analysis2"
                        android:layout_width="140dp"
                        android:layout_height="200dp"/>
                    <ImageButton
                        android:scaleType="fitXY"
                        android:layout_marginLeft="15dp"
                        android:src="@drawable/linearealg2"
                        android:layout_width="140dp"
                        android:layout_height="200dp"/>
                    <ImageButton
                        android:scaleType="fitXY"
                        android:layout_marginLeft="15dp"
                        android:src="@drawable/numeric"
                        android:layout_width="140dp"
                        android:layout_height="200dp"/>
                    <ImageButton
                        android:scaleType="fitXY"
                        android:layout_marginLeft="15dp"
                        android:src="@drawable/book_sample"
                        android:layout_width="140dp"
                        android:layout_height="200dp"/>
                </LinearLayout>

            </HorizontalScrollView>

            <TextView
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="25dp"
                android:textStyle="bold"
                android:textColor="@color/colorText"
                android:text="Ohne Mappe" />

            <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageButton
                        android:id="@+id/button_book_statistik"
                        android:src="@drawable/statistik"
                        android:scaleType="fitXY"
                        android:layout_width="140dp"
                        android:layout_height="200dp"/>
                    <ImageButton
                        android:id="@+id/button_book_kotlin"
                        android:layout_marginLeft="15dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/kotlin"
                        android:layout_width="140dp"
                        android:layout_height="200dp"/>
                    <ImageButton
                        android:id="@+id/button_book_sample"
                        android:layout_marginLeft="15dp"
                        android:src="@drawable/book_sample"
                        android:layout_width="140dp"
                        android:layout_height="200dp"/>

                </LinearLayout>

            </HorizontalScrollView>

        </LinearLayout>



    </ScrollView>


</LinearLayout>
        android:layout_height="wrap_content"
        android:theme="@style/RatingBar"
        android:layout_marginLeft="150dp" />


    <Button
        android:id="@+id/button_hussman"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#00FFFFFF"
